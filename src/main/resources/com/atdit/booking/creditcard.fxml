<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<AnchorPane prefWidth="800.0" prefHeight="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.atdit.booking.Controller.Page9aCreditCardController">
    <VBox spacing="20" AnchorPane.topAnchor="20.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0">
        <HBox fx:id="processStepBar" alignment="CENTER" spacing="15"
              style="-fx-background-color: #f8f9fa; -fx-padding: 20; -fx-border-color: #e9ecef; -fx-border-radius: 8; -fx-background-radius: 8; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 4, 0, 0, 2);"
              xmlns:fx="http://javafx.com/fxml">

            <Label fx:id="paymentSelectionLabel" text="Payment Selection"
                   style="-fx-min-width: 150; -fx-alignment: center; -fx-font-size: 14; -fx-padding: 10 20; -fx-border-color: #dee2e6; -fx-border-radius: 20; -fx-background-radius: 20; -fx-background-color: transparent;"/>

            <Text text="→" style="-fx-font-size: 18; -fx-fill: #6c757d;"/>

            <Label fx:id="paymentMethodLabel" text="Payment Method"
                   style="-fx-min-width: 150; -fx-alignment: center; -fx-font-size: 14; -fx-padding: 10 20; -fx-border-color: #dee2e6; -fx-border-radius: 20; -fx-background-radius: 20; -fx-background-color: transparent;"/>

            <Text text="→" style="-fx-font-size: 18; -fx-fill: #6c757d;"/>

            <Label fx:id="contractLabel" text="Contract"
                   style="-fx-min-width: 150; -fx-alignment: center; -fx-font-size: 14; -fx-padding: 10 20; -fx-border-color: #dee2e6; -fx-border-radius: 20; -fx-background-radius: 20; -fx-background-color: transparent;"/>
        </HBox>
        <Label text="Zahlungs Details" style="-fx-font-size: 24px; -fx-font-weight: bold"/>

        <VBox spacing="15" style="-fx-border-color: #cccccc; -fx-border-radius: 5; -fx-padding: 20;">
            <Label text="Karten Details" style="-fx-font-size: 16px; -fx-font-weight: bold"/>

            <VBox spacing="10">
                <Label text="Zahlungsmethode:"/>
                <ComboBox fx:id="paymentMethodCombo" onAction="#selectPaymentMethod" prefWidth="200"/>
            </VBox>

            <VBox spacing="10">
                <Label fx:id="cardLabel" text="Kartennummer:"/>
                <TextField fx:id="cardNumberField" promptText="XXXX XXXX XXXX XXXX" maxWidth="300"/>
            </VBox>

            <HBox spacing="20">
                <VBox fx:id="expiryBox" spacing="10">
                    <Label text="Expiry Date:"/>
                    <TextField fx:id="expiryField" promptText="MM/YY" maxWidth="100"/>
                </VBox>

                <VBox fx:id="cvvBox" spacing="10">
                    <Label text="CVV:"/>
                    <TextField fx:id="cvvField" promptText="XXX" maxWidth="70"/>
                </VBox>
            </HBox>
        </VBox>

        <VBox spacing="10" VBox.vgrow="ALWAYS"/>

        <HBox spacing="10" alignment="CENTER_RIGHT">
            <padding>
                <Insets bottom="20" right="20"/>
            </padding>
            <Button fx:id="backButton" text="Zurück" onMouseClicked="#previousPage"
                    style="-fx-min-width: 100;"/>
            <Button fx:id="payButton" text="Weiter" onMouseClicked="#nextPage"
                    style="-fx-min-width: 100; -fx-default-button: true;"/>
        </HBox>
    </VBox>
</AnchorPane>