<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<AnchorPane prefWidth="800.0" prefHeight="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.atdit.booking.Controller.Page10bFinancingContractController">
    <VBox spacing="20" AnchorPane.topAnchor="20.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0">
        <fx:include source="process_step_bar_2.fxml" fx:id="processStepBar"/>
    <Label text="Kaufvertrag" style="-fx-font-size: 24px; -fx-font-weight: bold"/>

        <VBox spacing="15" style="-fx-border-color: #cccccc; -fx-border-radius: 5; -fx-padding: 20;">
            <GridPane hgap="10" vgap="10">
                <columnConstraints>
                    <ColumnConstraints minWidth="120"/>
                    <ColumnConstraints/>
                </columnConstraints>

                <Label text="Vor- und Nachname:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                <Label fx:id="customerNameLabel" text="-" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                <Label fx:id="emailLabel" text="-" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                <Label text="Zahlungsmethode:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                <Label fx:id="paymentMethodLabel" text="-" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

                <Label text="Anzahlung (20%):" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
                <Label fx:id="downPaymentLabel" text="-" GridPane.columnIndex="1" GridPane.rowIndex="4"/>


                <Label text="Zu finanzierender Betrag:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                <Label fx:id="totalAmountLabel" text="-" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

                <Label text="Laufzeit:" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
                <Label fx:id="paymentPlanLabel" text="-" GridPane.columnIndex="1" GridPane.rowIndex="5"/>

                <Label text="Monatliche Rate:" GridPane.columnIndex="0" GridPane.rowIndex="6"/>
                <Label fx:id="monthlyPaymentLabel" text="-" GridPane.columnIndex="1" GridPane.rowIndex="6"/>
            </GridPane>
        </VBox>

        <TextArea fx:id="contractTextArea" wrapText="true" editable="false" VBox.vgrow="ALWAYS"
                  style="-fx-font-family: monospace; -fx-border-color: #cccccc; -fx-border-radius: 5; -fx-font-size: 14; -fx-pref-height: 300;"
                  prefRowCount="15"/>

        <VBox spacing="10">
            <RadioButton fx:id="signatureCheckbox" onMouseClicked="#signContract" text="Ich stimme dem Kaufvertrag zu."/>
        </VBox>

        <HBox spacing="10" alignment="CENTER_RIGHT">
            <Button text="ZurÃ¼ck" onMouseClicked="#previousPage"
                    style="-fx-min-width: 100; -fx-background-color: #e0e0e0;"/>
            <Button fx:id="continueButton" text="Signieren und jetzt bezahlen" onMouseClicked="#handleSign" disable="true"
                    style="-fx-min-width: 100; -fx-background-color: #4CAF50; -fx-text-fill: white;"/>
        </HBox>
    </VBox>
</AnchorPane>