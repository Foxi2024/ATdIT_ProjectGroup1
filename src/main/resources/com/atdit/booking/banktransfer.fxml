<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.text.Text?>
<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.atdit.booking.Controller.Page9bBankTransferController">
    <VBox spacing="20" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
        <HBox fx:id="processStepBar" alignment="CENTER" spacing="15"
              style="-fx-background-color: #f8f9fa; -fx-padding: 20; -fx-border-color: #e9ecef; -fx-border-radius: 8; -fx-background-radius: 8; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 4, 0, 0, 2);"
              xmlns:fx="http://javafx.com/fxml">

            <Label fx:id="paymentSelectionLabel" text="Payment Selection"
                   style="-fx-min-width: 150; -fx-alignment: center; -fx-font-size: 14; -fx-padding: 10 20; -fx-border-color: #dee2e6; -fx-border-radius: 20; -fx-background-radius: 20; -fx-background-color: transparent;"/>

            <Text text="→" style="-fx-font-size: 18; -fx-fill: #6c757d;"/>

            <Label fx:id="paymentMethodLabel" text="Payment Method"
                   style="-fx-min-width: 150; -fx-alignment: center; -fx-font-size: 14; -fx-padding: 10 20; -fx-border-color: #dee2e6; -fx-border-radius: 20; -fx-background-radius: 20; -fx-background-color: transparent;"/>

            <Text text="→" style="-fx-font-size: 18; -fx-fill: #6c757d;"/>

            <Label fx:id="contractLabel" text="Contract"
                   style="-fx-min-width: 150; -fx-alignment: center; -fx-font-size: 14; -fx-padding: 10 20; -fx-border-color: #dee2e6; -fx-border-radius: 20; -fx-background-radius: 20; -fx-background-color: transparent;"/>
        </HBox>
        <Label style="-fx-font-size: 24px; -fx-font-weight: bold" text="Payment Details" />

        <VBox spacing="15" style="-fx-border-color: #cccccc; -fx-border-radius: 5; -fx-padding: 20;">
            <Label style="-fx-font-size: 16px; -fx-font-weight: bold" text="Überweisung" />

            <VBox spacing="10">
                <Label text="Zahlungsmethoden auswählen" />
                <ComboBox fx:id="paymentMethodCombo" onAction="#selectPaymentMethod" prefWidth="200" />
            </VBox>

            <VBox spacing="10">
                <Label fx:id="ibanLabel" text="IBAN:" />
                <TextField fx:id="ibanField" maxWidth="300" promptText="IBAN eingeben" />
                <Label style="-fx-text-fill: #666666; -fx-font-size: 12px;" text="Beispiel: DE89 3704 0044 0532 0130 00" />
            </VBox>

            <VBox spacing="10">
                <Label text="Kontoinhaber" />
                <TextField fx:id="accountHolderField" maxWidth="300" promptText="Geben sie den Kontoinhaber an" />
            </VBox>
        </VBox>

        <VBox spacing="15" style="-fx-border-color: #cccccc; -fx-border-radius: 5; -fx-padding: 20;">
            <Label style="-fx-font-size: 16px; -fx-font-weight: bold" text="Name der Bank" />

            <VBox spacing="10">
                <Label text="Bank Name:" />
                <TextField fx:id="bankNameField" maxWidth="300" promptText="Geben Sie den Namen der Bank an" />
            </VBox>

            <VBox spacing="10">
                <Label text="BIC/SWIFT:" />
                <TextField fx:id="bicField" maxWidth="300" promptText="Geben Sie den BIC/SWIFT code an" />
            </VBox>
        </VBox>

        <VBox spacing="10" VBox.vgrow="ALWAYS" />

        <HBox alignment="CENTER_RIGHT" spacing="10">
            <padding>
                <Insets bottom="20" right="20" />
            </padding>
            <Button fx:id="backButton" onMouseClicked="#previousPage" style="-fx-min-width: 100; -fx-background-color: #e0e0e0;" text="Zurück" />
            <Button fx:id="continueButton" onMouseClicked="#handlePay" style="-fx-min-width: 100; -fx-background-color: #2196F3; -fx-text-fill: white;" text="Weiter" />
        </HBox>
    </VBox>
</AnchorPane>
