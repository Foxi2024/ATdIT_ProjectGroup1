<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<AnchorPane prefWidth="800.0" prefHeight="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.atdit.booking.Controller.ControllerPage10">
    <VBox spacing="20" AnchorPane.topAnchor="20.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0">
        <Label text="Payment Confirmation" style="-fx-font-size: 24px; -fx-font-weight: bold"/>

        <VBox spacing="15" style="-fx-border-color: #999999; -fx-border-radius: 5; -fx-padding: 15;">
            <GridPane hgap="10" vgap="10">
                <Label text="Total Amount:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                <Label fx:id="totalAmountLabel" text="[Total Amount]" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                <Label text="Payment ID:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                <Label fx:id="paymentIdLabel" text="[Payment ID]" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                <Label text="Payment Status:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                <Label fx:id="paymentStatusLabel" text="Pending" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
            </GridPane>
        </VBox>

        <HBox spacing="10" alignment="CENTER_RIGHT">
            <Button fx:id="backButton" text="Back" onMouseClicked="#previousPage"/>
            <Button fx:id="correctButton" text="Correct Payment" onMouseClicked="#handleCorrectPayment"/>
            <Button fx:id="confirmButton" text="Confirm Payment" onMouseClicked="#handleConfirmPayment"/>
        </HBox>
    </VBox>
</AnchorPane>