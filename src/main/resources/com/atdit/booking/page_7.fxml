<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" spacing="20.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.atdit.booking.Controller.ControllerPage7">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label text="Select Payment Method" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <VBox style="-fx-border-color: #999999; -fx-border-radius: 5;">
        <padding>
            <Insets bottom="15.0" left="15.0" right="15.0" top="15.0"/>
        </padding>

        <Label text="Payment Options" style="-fx-font-weight: bold;"/>
        <VBox spacing="10.0">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>

            <RadioButton fx:id="oneTimePaymentRadio" text="One-time Payment" selected="true">
                <toggleGroup>
                    <ToggleGroup fx:id="paymentMethodGroup"/>
                </toggleGroup>
                <tooltip>
                    <Tooltip text="Pay the full amount at once"/>
                </tooltip>
            </RadioButton>

            <RadioButton fx:id="financingRadio" text="Financing" toggleGroup="$paymentMethodGroup">
                <tooltip>
                    <Tooltip text="Split the payment into monthly installments"/>
                </tooltip>
            </RadioButton>
        </VBox>
    </VBox>

    <Button fx:id="continueButton" onAction="#handleContinue" text="Continue"
            style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-min-width: 150px;">
        <font>
            <Font size="12.0"/>
        </font>
    </Button>
</VBox>