<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.text.Text?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.atdit.booking.Controller.ControllerPage3" prefHeight="700.0" prefWidth="800.0">
    <GridPane alignment="CENTER" hgap="10" vgap="10" AnchorPane.topAnchor="10.0" AnchorPane.leftAnchor="10.0">
        <padding>
            <Insets top="20" right="20" bottom="20" left="20"/>
        </padding>

        <Text text="Customer Information" GridPane.columnSpan="2" GridPane.rowIndex="0"/>

        <Label text="Title:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="titleField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Name:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="nameField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="First Name:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <TextField fx:id="firstNameField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

        <Label text="Nationality:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <TextField fx:id="nationalityField" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

        <Label text="Birth Date:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
        <DatePicker fx:id="birthDatePicker" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

        <Label text="Street:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
        <TextField fx:id="streetField" GridPane.rowIndex="6" GridPane.columnIndex="1"/>

        <Label text="House Number:" GridPane.rowIndex="7" GridPane.columnIndex="0"/>
        <TextField fx:id="houseNumberField" GridPane.rowIndex="7" GridPane.columnIndex="1"/>

        <Label text="Postal Code:" GridPane.rowIndex="8" GridPane.columnIndex="0"/>
        <TextField fx:id="postalCodeField" GridPane.rowIndex="8" GridPane.columnIndex="1"/>

        <Label text="City:" GridPane.rowIndex="9" GridPane.columnIndex="0"/>
        <TextField fx:id="cityField" GridPane.rowIndex="9" GridPane.columnIndex="1"/>

        <Label text="Country:" GridPane.rowIndex="10" GridPane.columnIndex="0"/>
        <TextField fx:id="countryField" GridPane.rowIndex="10" GridPane.columnIndex="1"/>

        <Label text="Email:" GridPane.rowIndex="11" GridPane.columnIndex="0"/>
        <TextField fx:id="emailField" GridPane.rowIndex="11" GridPane.columnIndex="1"/>

        <!-- Navigation Buttons -->
        <Button text="Back" fx:id="backButton" onMouseClicked="#previousPage" GridPane.rowIndex="12" GridPane.columnIndex="0"/>
        <Button text="Continue" fx:id="continueButton" onMouseClicked="#nextPage" GridPane.rowIndex="12" GridPane.columnIndex="1"/>
    </GridPane>
</AnchorPane>