<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<?import javafx.collections.FXCollections?>
<?import java.lang.String?>

<AnchorPane prefWidth="800.0" prefHeight="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.atdit.booking.Controller.Page3PersonalInformationController">
    <VBox spacing="20" AnchorPane.topAnchor="20.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0">
        <HBox fx:id="processStepBar1" alignment="CENTER" spacing="15"
              style="-fx-background-color: #f8f9fa; -fx-padding: 20; -fx-border-color: #e9ecef; -fx-border-radius: 8; -fx-background-radius: 8; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 4, 0, 0, 2);"
              xmlns:fx="http://javafx.com/fxml">

            <Label fx:id="step1Label" text="Data Privacy Agreement"
                   style="-fx-min-width: 150; -fx-alignment: center; -fx-font-size: 14; -fx-padding: 10 20; -fx-border-color: #dee2e6; -fx-border-radius: 20; -fx-background-radius: 20; -fx-background-color: transparent;"/>
            <Text text="→" style="-fx-font-size: 18; -fx-fill: #6c757d;"/>

            <Label fx:id="step2Label" text="Personal Information"
                   style="-fx-min-width: 150; -fx-alignment: center; -fx-font-size: 14; -fx-padding: 10 20; -fx-border-color: #dee2e6; -fx-border-radius: 20; -fx-background-radius: 20; -fx-background-color: transparent;"/>
            <Text text="→" style="-fx-font-size: 18; -fx-fill: #6c757d;"/>

            <Label fx:id="step3Label" text="Financial Information"
                   style="-fx-min-width: 150; -fx-alignment: center; -fx-font-size: 14; -fx-padding: 10 20; -fx-border-color: #dee2e6; -fx-border-radius: 20; -fx-background-radius: 20; -fx-background-color: transparent;"/>
            <Text text="→" style="-fx-font-size: 18; -fx-fill: #6c757d;"/>

            <Label fx:id="step4Label" text="Financial Proof"
                   style="-fx-min-width: 150; -fx-alignment: center; -fx-font-size: 14; -fx-padding: 10 20; -fx-border-color: #dee2e6; -fx-border-radius: 20; -fx-background-radius: 20; -fx-background-color: transparent;"/>
            <Text text="→" style="-fx-font-size: 18; -fx-fill: #6c757d;"/>

            <Label fx:id="step5Label" text="Create Account"
                   style="-fx-min-width: 150; -fx-alignment: center; -fx-font-size: 14; -fx-padding: 10 20; -fx-border-color: #dee2e6; -fx-border-radius: 20; -fx-background-radius: 20; -fx-background-color: transparent;"/>

        </HBox>

        <Text text="Geben Sie Ihre persönlichen Daten ein" style="-fx-font-size: 18px"/>
        <VBox spacing="10" VBox.vgrow="ALWAYS">
            <HBox spacing="20">
                <GridPane hgap="10" vgap="10">
                    <Label text="Title:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                    <ComboBox fx:id="titleField" GridPane.rowIndex="0" GridPane.columnIndex="1" />

                    <Label text="Nachname:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                    <TextField fx:id="nameField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                    <Label text="Vorname:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                    <TextField fx:id="firstNameField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                    <Label text="Geburtstag:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                    <DatePicker fx:id="birthDatePicker" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                    <Label text="Land:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                    <TextField fx:id="countryField" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

                    <Label text="Addresse:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
                    <TextField fx:id="addressField" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

                    <Label text="Email:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
                    <TextField fx:id="emailField" GridPane.rowIndex="6" GridPane.columnIndex="1"/>
                </GridPane>
                <Text wrappingWidth="250" style="-fx-font-size: 14px">
                    Nur noch ein paar Details, bevor Ihr Weg zu den Sternen beginnen kann. Ihre Angaben helfen uns, Ihre Reise einzigartig zu gestalten – sicher und individuell.
                </Text>
            </HBox>
        </VBox>
        <HBox spacing="10" alignment="CENTER_RIGHT">
            <Button fx:id="backButton" text="Zurück" onMouseClicked="#previousPage"/>
            <Button fx:id="continueButton" text="Weiter" onMouseClicked="#nextPage"/>
        </HBox>
    </VBox>
</AnchorPane>