<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.text.Text?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.atdit.booking.Controller.ControllerPage4" prefHeight="700.0" prefWidth="800.0">
    <GridPane alignment="CENTER" hgap="10" vgap="10" AnchorPane.topAnchor="10.0" AnchorPane.leftAnchor="10.0">
        <padding>
            <Insets top="20" right="20" bottom="20" left="20"/>
        </padding>

        <Text text="Financial Information" GridPane.columnSpan="2" GridPane.rowIndex="0"/>

        <Label text="Average Monthly Net Income (€):" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="netIncomeField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Monthly Fixed Costs (€):" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="fixedCostsField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Minimum Monthly Cost of Living (€):" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <TextField fx:id="minLivingCostField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

        <Label text="Total Net Worth Estimate (€):" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <TextField fx:id="liquidAssetsField" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

        <!-- Navigation Buttons -->
        <Button text="Back" fx:id="backButton" onMouseClicked="#previousPage" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
        <Button text="Continue" fx:id="continueButton" onMouseClicked="#nextPage" GridPane.rowIndex="5" GridPane.columnIndex="1"/>
    </GridPane>
</AnchorPane>