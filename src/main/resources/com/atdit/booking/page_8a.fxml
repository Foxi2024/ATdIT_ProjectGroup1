<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" spacing="20.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.atdit.booking.Controller.ControllerPage8a">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label text="One-Time Payment" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <VBox style="-fx-border-color: #999999; -fx-border-radius: 5;">
        <padding>
            <Insets bottom="15.0" left="15.0" right="15.0" top="15.0"/>
        </padding>

        <GridPane vgap="10" hgap="10">
            <Label text="Total Amount:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <Label fx:id="totalAmountLabel" text="â‚¬0.00" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <Label text="Payment Method:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <ComboBox fx:id="paymentMethodCombo" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Label text="Card Number:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <TextField fx:id="cardNumberField" promptText="XXXX XXXX XXXX XXXX" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

            <Label text="Expiry Date:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <TextField fx:id="expiryField" promptText="MM/YY" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

            <Label text="CVV:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
            <TextField fx:id="cvvField" promptText="XXX" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
        </GridPane>
    </VBox>

    <HBox spacing="10" alignment="CENTER">
        <Button fx:id="backButton" onAction="#handleBack" text="Back"
                style="-fx-background-color: #999999; -fx-text-fill: white; -fx-min-width: 100px;"/>
        <Button fx:id="payButton" onAction="#handlePay" text="Pay Now"
                style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-min-width: 100px;"/>
    </HBox>
</VBox>