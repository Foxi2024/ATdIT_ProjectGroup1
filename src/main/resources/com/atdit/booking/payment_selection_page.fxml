<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<?import javafx.scene.text.Text?>
<AnchorPane prefWidth="800.0" prefHeight="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.atdit.booking.Controller.Page8aSelectPaymentController">
    <VBox spacing="20" AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0">
        <HBox fx:id="processStepBar" alignment="CENTER" spacing="15"
              style="-fx-background-color: #f8f9fa; -fx-padding: 20; -fx-border-color: #e9ecef; -fx-border-radius: 8; -fx-background-radius: 8; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 4, 0, 0, 2);"
              xmlns:fx="http://javafx.com/fxml">

            <Label fx:id="paymentSelectionLabel" text="Payment Selection"
                   style="-fx-min-width: 150; -fx-alignment: center; -fx-font-size: 14; -fx-padding: 10 20; -fx-border-color: #dee2e6; -fx-border-radius: 20; -fx-background-radius: 20; -fx-background-color: transparent;"/>

            <Text text="→" style="-fx-font-size: 18; -fx-fill: #6c757d;"/>

            <Label fx:id="paymentMethodLabel" text="Payment Method"
                   style="-fx-min-width: 150; -fx-alignment: center; -fx-font-size: 14; -fx-padding: 10 20; -fx-border-color: #dee2e6; -fx-border-radius: 20; -fx-background-radius: 20; -fx-background-color: transparent;"/>

            <Text text="→" style="-fx-font-size: 18; -fx-fill: #6c757d;"/>

            <Label fx:id="contractLabel" text="Contract"
                   style="-fx-min-width: 150; -fx-alignment: center; -fx-font-size: 14; -fx-padding: 10 20; -fx-border-color: #dee2e6; -fx-border-radius: 20; -fx-background-radius: 20; -fx-background-color: transparent;"/>
        </HBox>
        <Label text="Wähle deine Zahlungsart aus" style="-fx-font-size: 24px; -fx-font-weight: bold"/>

        <fx:define>
            <ToggleGroup fx:id="paymentMethodGroup"/>
        </fx:define>

        <VBox spacing="15" style="-fx-border-color: #cccccc; -fx-border-radius: 5; -fx-padding: 20;">
            <RadioButton fx:id="oneTimePaymentRadio" text="Kauf auf Rechnung"
                         toggleGroup="$paymentMethodGroup"
                         selected="true"
                         style="-fx-font-size: 16px;"/>
            <Label text="Kauf auf Rechnung - Jetzt kaufen und erst nach 30 Tagen bezahlen."
                   style="-fx-text-fill: #666666; -fx-padding: 0 0 0 25;"/>

            <RadioButton fx:id="financingRadio" text="Finanzierung"
                         toggleGroup="$paymentMethodGroup"
                         style="-fx-font-size: 16px; -fx-padding: 10 0 0 0;"/>
            <Label text="Teile den Gesamtbetrag in monatliche Raten auf. Wähle die Anzahl der Monate aus, die du für die Rückzahlung benötigst."
                   style="-fx-text-fill: #666666; -fx-padding: 0 0 0 25;"/>
        </VBox>

        <HBox spacing="10" alignment="CENTER_RIGHT">
            <Button text="Zurück" onMouseClicked="#previousPage"
                    style="-fx-min-width: 100; -fx-background-color: #e0e0e0;"/>
            <Button text="Weiter" onMouseClicked="#nextPage"
                    style="-fx-min-width: 100; -fx-background-color: #4CAF50; -fx-text-fill: white;"/>
        </HBox>
    </VBox>
</AnchorPane>